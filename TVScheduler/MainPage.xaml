<Page
    x:Class="TVScheduler.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TVScheduler"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <Button x:Name="button" Content="Dialogue" HorizontalAlignment="Left" Margin="127,73,0,0" VerticalAlignment="Top" Width="143" Click="button_Click"/>
        <Button x:Name="button30mn" Content="30mn" HorizontalAlignment="Left" Margin="127,141,0,0" VerticalAlignment="Top" Width="143" Click="button1_Click"/>
        <Button x:Name="button60mn" Content="60mn" HorizontalAlignment="Left" Margin="127,173,0,0" VerticalAlignment="Top" Width="143" Click="button60mn_Click"/>
        <Button x:Name="buttonOff" Content="Off" HorizontalAlignment="Left" Margin="127,237,0,0" VerticalAlignment="Top" Width="143" Click="buttonOff_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="176,300,0,0" Grid.RowSpan="2" TextWrapping="Wrap" Text="{Binding title}" VerticalAlignment="Top"/>

    </Grid>
</Page>
